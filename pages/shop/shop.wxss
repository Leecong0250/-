/* shop.wxss */
@import "../assets/style/weui.wxss";
.head{
  background-color: gainsboro;
}
.menu{
  float: left;
  width: 22%;
  height: 395px;
  background-color: gainsboro;
  border-right:1px solid  lightgray;
}
.menuitem{
   text-align:center;
   border-bottom:1px solid  lightgray;
   background-color: gainsboro;
   height:100rpx;   
   line-height:100rpx;   
   overflow:hidden;  
}
.detail{
   float: right;
   width: 75%;
   background-color: white;
}
.add{
  float: right;
}
.shopfoot{
  position:fixed;
  bottom:0;
  width: 100%;
  height: 8%;
  background-color: white;
  border-top:1px solid  gainsboro;
}
.tab-bubble {
    background-color: #E64340;
    text-align: center;
    justify-content: flex-start;
    align-content: center;
    position: absolute;
    top: 0px;
    right: 319px;
    width: 18px;
    height: 18px;
    line-height: 13px;
    border-radius: 9px;
}
.tab-count {
    color: white;
    font-size: 10px;
}
.totalfee{
  color: red;
  position: absolute;
  top: 13px;
  right: 255px;
}
.commodity_screen {
  width: 100%;
  height: 92%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 8.2%;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}
.titleforcar{
  margin-left: 26rpx;
}
.clickSel{
  color: green;
  background-color: whitesmoke; 
  border-right:1px solid  whitesmoke;
  
}
.removeSel{
  color: black;
  background-color: gainsboro;
  border-right:1px solid  lightgray;
}