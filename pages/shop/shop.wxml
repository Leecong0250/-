<!--shop.wxml-->
<view class="head">
  <image 
        style="width: 100%; height: 150px; background-color: #eeeeee;"
        src="{{headImgUrls}}">
  </image>
</view>
<view class="shopbody">
  <view class="menu">
      <view class="menuitem {{itemName.tag==selected?'clickSel':'removeSel'}}"  
        wx:for="{{menu}}" 
        wx:for-index="idx" 
        wx:for-item="itemName"
        bindtap="clickmenu" id="{{ itemName.tag }}">
        
        {{itemName.name}}
        
              
        
      </view>
      
  </view>
   
  <view class="detail" bindtap="getImgUrl">
    <view class="weui-panel__bd wrapper-content">
    <scroll-view scroll-y style="height: 396px;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}" >
       <navigator 
                  hover-class="weui-cell_active"
                  class="weui-media-box weui-media-box_appmsg"
                  wx:for="{{fooddetail}}"
                  wx:for-item="itemName" 
                  wx:if="{{itemName.tag == tag}}">
          
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" 
                       src="{{itemName.imgurl}}">
                </image>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">
                {{itemName.name}}
              </view>
             
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view style="color:red" 
                        class="placeholder ">
                        ￥{{itemName.price}} 
                  </view>
                </view>
                <view >
                  <button type="primary" 
                          size="mini" 
                          bindtap="addfood" 
                          id="{{itemName.price}}"  
                          data-foodname="{{itemName.name}}"
                          data-foodimg="{{itemName.imgurl}}" 
                          >+
                  </button>  
                </view>
              </view>
          </view>
          
        </navigator>
        </scroll-view >
    </view>
  </view>
  
</view>

<view class="shopfoot">
  <view class="weui-flex">
    <view class="weui-flex__item">
      <image mode="scaleToFill" 
            style="width: 48px; height: 48px;"        
            src="../assets/img/shoppinglist.png"
            bindtap="showfooddetail">
      </image>
    </view>
    <view class="tab-bubble"  wx:if="{{ numbers > 0}}">
        <text class="tab-count">{{numbers}}</text>
    </view>
    <view class="weui-flex__item">
        <text class="totalfee">￥{{pee}}</text>
    </view>
    <view class="weui-flex__item">
        <button type="primary" 
                disabled="{{ numbers>0?false:true}}"
                 style="font-size:19px">立即下单</button> 
    </view>
  </view>
</view>
<view class="commodity_screen" 
      bindtap="hideModal" 
      wx:if="{{showModalStatus}}">
</view>
<view animation="{{animationData}}" 
      class="commodity_attr_box wrapper-content" 
      wx:if="{{showModalStatus}}">
      <scroll-view scroll-y style="height: 500rpx;" bindscrolltoupper="upper" bindscrolltolower="lower" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-top="{{scrollTop}}">
      <view  wx:if="{{ numbers == 0}}">
        <text >您的菜单是空的哦:(</text>
      </view>
     <view  wx:if="{{ numbers > 0}}">
          <text class="titleforcar">您总共点了{{numbers}}份菜：</text>
           <navigator 
                  hover-class="weui-cell_active"
                  class="weui-media-box weui-media-box_appmsg"
                  wx:for="{{foodlist}}"
                  wx:for-item="itemName" 
                 >
          
          <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb" 
                       src="{{itemName.imgurl}}">
                </image>
          </view>
          <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <view class="weui-media-box__title">
                {{itemName.name}}
              </view>
             
              <view class="weui-flex">
                <view class="weui-flex__item">
                  <view style="color:red" 
                        class="placeholder ">
                        ￥{{itemName.price}} 
                  </view>
                </view>
                <view >
                  <button type="warn" 
                          size="mini" 
                          bindtap="deletefood" 
                          id="{{itemName.price}}"  
                          data-foodname="{{itemName.name}}"
                          data-foodimg="{{itemName.imgurl}}" 
                          >-
                  </button>  
                </view>
              </view>
          </view>
          
        </navigator>
        </view>
        </scroll-view>
</view>
